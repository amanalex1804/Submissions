/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* middleNode(ListNode* head) {

        int sz =0;
        ListNode* curr = head;
        while(curr!=NULL){
            ++sz;
            curr = curr->next;
        }

        int mid = (ceil)((sz+1)/2);
        sz=0; curr = head;

        while(curr!=NULL){
            if(sz==mid){
                return curr;
            }
            ++sz;
            curr = curr->next;
        }
        return NULL;
        
    }
};

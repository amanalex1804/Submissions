#include<bits/stdc++.h>
using namespace std;

int main(){
	
	int n;
	cin>>n;
	string s;
	cin>>s;
	int l=s.size();
	int i=0;
	int ans=0;
	while(i<l){
		
		if(s[i]=='x'){
			int cnt=0;
			while(s[i]=='x'){
				++cnt;
				++i;
			}
			if(cnt>=3) ans+=(cnt-2);
		}
		else ++i;
		
		
		
	}
	cout<<ans;
	
	return 0;
}

#define T int t;for(scanf("%d",&t);t--;)
#define mod 1000000007
#define scl(xx) scanf("%lld",&xx)
#define pra(xx) printf("%d ",xx)
#define prs(xx) printf("xx\n")
#define bs(XX,xx) binary_search(XX.begin(), XX.end(),xx)

ll n;
void phi()
{
	ll ans,i;
	ans=n;
	for(i=2;i*i<=n;++i)
	{
		 if(n%i==0)	ans-=ans/i;
		while(n%i==0) n/=i;
	  
		
	}
	if(n>1) ans-=ans/n;
	cout<<ans/2<<endl;
}

int main()
{
while(scl(n)!=EOF)
{
	phi();
}


    return 0;
}












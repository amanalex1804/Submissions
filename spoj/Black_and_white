#include<bits/stdc++.h>
using namespace std;
#define T int t;for(scanf("%d",&t);t--;)
#define ll long long int
int main(){
    while(1){
        string A,B;
        cin>>A>>B;
        if(A=="*" and B=="*") break;
        int cnt=0,l,i;
        l=A.length();
        for(i=0;i<l;++i)     {
            if(A[i]!=B[i])       {
                ++cnt;
                while(A[i]!=B[i])
                    ++i;    }}
        cout<<cnt<<endl;    }
return 0;}
